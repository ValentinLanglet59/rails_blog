<h1 class="text-center mt-4 mb-4">Articles listing page</h1>
<div class="container ">
  <% @articles.each do |article |%>
    <div class="row justify-content-md-center">
      <div class="col-8">
        <div class="card text-center mb-5">
          <div class="card-header">
            Featured
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success"%></h5>
            <p class="card-text"><%= truncate(article.description, length: 100)%></p>
            <%= link_to "Show this article", article_path(article), class: "btn btn btn-outline-success" %>
            <%= link_to "Edit this article", edit_article_path(article), class: "btn btn btn-outline-info" %>
            <%= button_to "Delete this article", article_path(article), method: :delete,
                                                                      data: { conferm: "Are you sure you  wont to delete this article?"},
                                                                      class:"btn btn-xs- btn-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(article.created_at)%> ago,
              edited <%= time_ago_in_words(article.updated_at)%> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
